diff --git a/nsis/gvim.nsi b/nsis/gvim.nsi
index d8c3db688..a23c4ae42 100644
--- a/nsis/gvim.nsi
+++ b/nsis/gvim.nsi
@@ -979,8 +979,7 @@ Section "un.$(str_unsection_exe)" id_unsection_exe
 	Delete $0\*.txt
 
 	${If} ${Errors}
-	  MessageBox MB_OK|MB_ICONEXCLAMATION \
-	      "Some files in $0 have not been deleted!$\nYou must do it manually."
+	  MessageBox MB_OK|MB_ICONEXCLAMATION $(str_msg_rm_exe_fail)
